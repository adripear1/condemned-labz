{% comment %} This file is auto-generated. Do not edit this file. {% endcomment %}
{% liquid
  assign products = block.settings.collection.products
  if products == none
    assign products = (1..block.settings.columns_desktop)
  endif
%}

{%- liquid
  capture style_panel_vars
    render 'ss-style-panel-v-1-0', settings: block.settings, type: 'spacing'
  endcapture
-%}

<div
  class='
    ss-color-{{ block.settings.color_scheme }}
    ss-size-panel
    ss-spacing-panel
  '
  style='{{ style_panel_vars }}'
>
  {% if products != blank %}
    <ul
      class='ss-product-grid ss-product-grid--{{ section.id }}'
      style='--ss-product-grid-columns-desktop: repeat({{ block.settings.columns_desktop}}, 1fr);'
    >
      {% for product in products limit: block.settings.products_to_show %}
        <li>
          {% content_for 'block', type: 'ss-product-card-v-1-0', id: 'product-grid-item', closest.product: product %}
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No products found.</p>
  {% endif %}
</div>

