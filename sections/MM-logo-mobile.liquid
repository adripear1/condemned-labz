    "blocks":
    [
        {
            "name":"Product",
            "type":"product",
            "settings":
            [     
                {
                  "type": "product", 
                  "id": "product", 
                  "label": "Product"
                }                                              
            ]            
        }
    ],    
    "presets": [
      {
        "name": "MM Logos",
        "category": "Components Home"
      }
    ]
  }
{% endschema %}