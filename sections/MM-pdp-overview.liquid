<style>
  .pdp_view-inner{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 50px 0px;
  }
  .pdp_view-left{
    width: 50%;
    padding-right: 50px;
  }
  .pdp_view-left h2{
    color: #080000;
    font-family: 'proxima-nova-cn';
    font-size: 4.8rem;
    font-style: normal;
    font-weight: 700;
    line-height: 60px;
    text-transform: uppercase;
    margin: 0;
  }
  .pdp_view-left span{
    color: #080000;
    font-family: 'proxima-nova-cn';
    font-size: 28px;
    font-style: normal;
    font-weight: 400;
    line-height: 34px;
    max-width: 500px;
    display: block;
  }
  .pdp_view-right{
    width: 50%;
    padding-left: 50px;
  }
  .pdp_view-right img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .pdp_formula .pdp_view-inner{
    border: 1px solid #707070;
    padding: 40px 60px;
    box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
  }
  .pdp_view-img{
    flex-direction: row-reverse;
  }
  .pdp_view-img .pdp_view-left{
    padding-right: 0px;
    padding-left: 50px;
  }
  .pdp_view-img .pdp_view-right{
    padding-left: 0;
    padding-right: 50px;
  }
  .pdp_view-link{
    background: #FAB20A;
    border: 1px solid #080000;
    text-decoration: none;
    width: 320px;
    height: 61px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #13284F;
    font-family: 'proxima-nova-cn';
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: 29px;
    text-transform: uppercase;
  }

  @media(max-width:990px){
    .pdp_view-left h2{
      font-size: 3.8rem;
      line-height: 50px;
    }
    .pdp_view-link{
      width:100%;
    }
  }
  @media(max-width:767px){
    .pdp_view-inner{
      flex-wrap: wrap;
    }
    .pdp_view-left, .pdp_view-img .pdp_view-right {
      width: 100%;
      padding-right: 0px;
    }
    .pdp_view-right, .pdp_view-img .pdp_view-left{
      width: 100%;
      padding-left: 0px;
    }
    .pdp_formula .pdp_view-inner{
      padding:20px;
    }
    .pdp_view-img .pdp_view-left{
      margin-bottom:50px;
    }
  }
</style>




{% if section.settings.heading != blank %}
<div class="pdp_view-main {{ section.settings.custom_class }}">
  <div class="page-width">
    <div class="pdp_view-inner {% if section.settings.image_first %} pdp_view-img {% endif %}">
      <div class="pdp_view-left">
        <h2>{{ section.settings.heading }}</h2>
        <span>{{ section.settings.content }}</span>
        {% if section.settings.meta_product != blank %}
           <a class="pdp_view-link" href="{{ product.metafields.custom.transparent_formula.value.product.value.url }}">Shop Now</a>
        {% endif %}
      </div>
      <div class="pdp_view-right">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url:width:section.settings.image.width | image_tag:loading:'lazy' }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
          {% endif %}


{% schema %}
  {
    "name": "MM pdp overview",
    "settings": [
      {
        "type": "text",
        "id": "custom_class",
        "label": "Custom Class"
      },
      {
        "type": "checkbox",
        "id": "image_first",
        "label": "Image First?",
        "default": false
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "product",
        "id": "meta_product",
        "label": "Product URL"
      }
    ],
    "presets": [
      {
        "name": "MM pdp overview"
      }
    ]
  }
{% endschema %}

