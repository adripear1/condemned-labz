<style>
.get_the_gear .slick-slider{
  margin-bottom:0;
}
.get_the_gear {
  width: 100%;
}
.gear_inner {
  width: 100%;
  height: 100%;
}
.get_the_gear .gear_inner {
  display: flex;
  align-items: flex-end;
}
.get_the_gear .gear_col {
  width: 50%;
  height: auto;
  position: relative;
  overflow: hidden;
}
.get_the_gear .gear_image {
  width: 100%;
  height: 100%;
}
.get_the_gear .gear_image img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.get_the_gear .gear_content {
  padding: 50px 50px 20px;
}
.product-slide.product-images{
  height:700px;
}
  .product-slide.product-images img{
    width:100%;
    object-fit: cover;
    height:100%;
  }
.get_the_gear .gear_products {
  display: flex;
  justify-content: space-between;
  gap: 30px;
}
.get_the_gear .gear_products {
  width: 100%;
  height: 100%;
  padding-top: 50px;
}
.get_the_gear .products_image {
  width: 100%;
  height: 100%;
  border: 1px solid black;
}
.get_the_gear .products_image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.get_the_gear h5 {
  font-size: 12px;
  padding-bottom: 5px;
}
.gear_content h3 {
  font-family: "proxima-nova-cn" !important;
  margin-bottom: 0px;
}
.get_the_gear h2 {
  color: #080000;
  font-size: 50px;
  font-style: normal;
  font-weight: 700;
  line-height: 50px; /* 66% */
  text-transform: uppercase;
  margin: 0px;
}
.get_the_gear h4{
  color: #080000;
  font-size: 40px;
  font-style: normal;
  font-weight: 700;
  line-height: 45px;
  text-transform: uppercase;
  margin: 0px;
  }
.get_the_gear h3 {
  font-size: 18px;
}
.get_the_gear p {
  overflow: hidden;
  color: #080000;
  font-size: 18px;
  font-style: normal;
  font-weight: 400;
  line-height: 22px; /* 122.222% */
  font-family: "proxima-nova-cn";
}
.get_the_gear .crtadd {
  display:flex;
  justify-content:center;
  align-items:center;
  text-decoration: none;
  width:100%;
  max-width: 295px;
  height: 59px;
  flex-shrink: 0;
  background: #fab20a;
  padding: 15px 70px;
  overflow: hidden;
  color: #080000;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 22px;
  font-style: normal;
  font-weight: 700;
  line-height: 30px;
  text-transform: uppercase;
  border: 0px;
  cursor: pointer;
}
.get_the_gear .gear_marquee {
  width: 100%;
  height: 100%;
}
.get_the_gear span {
  display: block;
  padding: 40px 0;
  overflow: hidden;
  color: #080000;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 77px;
  font-style: normal;
  font-weight: 700;
  line-height: 60px;
  letter-spacing: 3.388px;
  text-transform: uppercase;
}
.gear_content .normal {
  display: none;
}
.product-thumbnail {
  width: 250px;
  height: 250px;
  padding: 10px;
  border: 1px solid #141010;
  margin: 0 5px;
}
.product-thumbnail img {
  display: block;
  width: 100%;
  height: 100%;
  cursor:pointer;
}
.get_the_gear .dess {
  width: auto;
  padding: 15px 0px;
}
.get_the_gear .dess p {
  margin: 0px;
}
.get_the_gear .slidecart-form-error {
    margin-top: 15px;
    text-align: start;
    font-weight: 700;
}
  .shopify-section .get_the_gear .slick-prev {
    left: 20px;
}
  .shopify-section .get_the_gear .slick-next {
    right: 20px;
}
  @media screen and (max-width:991px){
    .get_the_gear{
      margin-bottom: 20px;
    }
    .get_the_gear .gear_inner {
      flex-direction: column;
    }
    .get_the_gear .gear_col {
      width: 100%;
    }
    .get_the_gear .gear_content {
      padding: 0 50px 0px;
    }
    .get_the_gear h3 {
      font-size: 18px;
      margin: 25px 0 8px;
    }
    .get_the_gear .product-thumbnail {
      width: 230px;
    }
    .get_the_gear .gear_products {
      padding-top: 35px;
    }
  }

  @media screen and (max-width:767px){
    .get_the_gear h2 {
      font-size: 33px;
      line-height: 40px;
    }
    .Costom_collection_main .one-whole.column.center.homepage_content {
      padding: 0 30px 18px 0;
    }
    .Costom_collection_main .container {
      padding: 0 0 0 30px;
    }
    .get_the_gear .product-thumbnail{
      width: 200px;
      height: 200px;
    }
    .get_the_gear .gear_content {
        padding: 0 20px 0px;
    }
    .product-slide.product-images {
        height: 500px;
    }
    .gear--info{
      max-width: 340px;
      margin: auto;
    }
  }
</style>

<section class="get_the_gear">
    <div class="container">
        <div class="gear_inner">
            <div class="gear_col">
                <div class="gear_image">
                    <div class="product-slider">
                      {%- for block in section.blocks -%}
                        <div class="product-slide product-images">
                          {% if block.settings.image != blank %}
                           <img src="{{ block.settings.image | img_url: 'master' }}">
                          {% endif %}
                        </div>
                        {%- endfor -%}
                    </div>
                </div>
            </div>
            <div class="gear_col gear_col2">
                <div class="gear_content">
                  <div class="gear--info">
                    <h3>{{ section.settings.sub_headline }}</h3>
                    <h2>{{ section.settings.headline }}</h2>
                    <h4>{{ section.settings.headline2 }}</h4>
                   <div class="dess">
                    <p>{{ section.settings.text }}</p>
                  </div>
                  <a class="crtadd" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
                  </div>
                  <div class="gear_products">
                      <div class="product-thumbnails">
                         {%- for block in section.blocks -%}
                          <div class="product-thumbnail">
                             {% if block.settings.image != blank %}
                           <img src="{{ block.settings.image | img_url: 'master' }}">
                          {% endif %}
                          </div>
                         {%- endfor -%}
                      </div>
                  </div>
                </div>
            </div>
        </div>
 <!-- <div class="tech-slideshow">
  <div class="mover-1">
    <span class="scrolling-text">{{ section.settings.scroller_text }}</span>
  </div>
</div> -->

    </div>
</section>
<script>
  $(document).ready(function() {
    $('.product-slider').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: true,
      fade: true,
      asNavFor: '.product-thumbnails',
       responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1,
        infinite: true,
        dots: true
      }
    },

    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
    });

    $('.product-thumbnails').slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      asNavFor: '.product-slider',
      dots: false,
      centerMode: false,
       arrows: false,
       variableWidth: true,
      focusOnSelect: true,
       responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 3,
        infinite: true,
        variableWidth: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 1
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
    });
  });
  const scrollingText = document.querySelector('.scrolling-text');

  if (scrollingText) {
    scrollingText.addEventListener('mouseenter', () => {
      scrollingText.style.animationPlayState = 'paused';
    });

    scrollingText.addEventListener('mouseleave', () => {
      scrollingText.style.animationPlayState = 'running';
    });
  }

</script>
