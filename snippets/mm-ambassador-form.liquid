    </div>

    <div class="form-group">
      <h4 class="questions">Are you 18 or 21?</h4>
      <div class="radio-group">
        <div class="radio-item">
          <input type="radio" id="age18" name="age" value="Yes" required>
          <label for="age18">Yes</label>
        </div>
        <div class="radio-item">
          <input type="radio" id="age21" name="age" value="No">
          <label for="age21">No</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <h4 class="questions">Have you used Condemned Labz supplements?</h4>
      <div class="radio-group">
        <div class="radio-item">
          <input type="radio" id="supplementsYes" name="supplements" value="Yes" required>
          <label for="supplementsYes">Yes</label>
        </div>
        <div class="radio-item">
          <input type="radio" id="supplementsNo" name="supplements" value="No">
          <label for="supplementsNo">No</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="questions" for="productsMostLiked">Which products do you like the most?</label>
      <textarea type="text" id="productsMostLiked" name="mostLiked" rows="2"></textarea>
    </div>

    <div class="form-group">
      <h4 class="questions">What most interests you? (Check all that apply)</h4>
      <div class="radio-group checkboxs">
        <div class="radio-item">
          <input type="checkbox" id="strongCommunity" name="interest[]" value="Being part of a strong community">
          <label for="strongCommunity">Being part of a strong community</label>
        </div>
        <div class="radio-item">
          <input type="checkbox" id="growingMedia" name="interest[]" value="Growing social media presence">
          <label for="growingMedia">Growing social media presence</label>
        </div>
        <div class="radio-item">
          <input type="checkbox" id="freeProducts" name="interest[]" value="Earning free products">
          <label for="freeProducts">Earning free products</label>
        </div>
        <div class="radio-item">
          <input type="checkbox" id="earningCommission" name="interest[]" value="Earning commission">
          <label for="earningCommission">Earning commission</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <h4 class="questions">Are you a trainer or online coach?</h4>
      <div class="radio-group">
        <div class="radio-item">
          <input type="radio" id="trainerYes" name="trainerOrCoach" value="Yes" required>
          <label for="trainerYes">Yes</label>
        </div>
        <div class="radio-item">
          <input type="radio" id="trainerNo" name="trainerOrCoach" value="No">
          <label for="trainerNo">No</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="questions" for="clientsCount">If yes, how many clients?</label>
      <input type="text" id="clientsCount" name="clientsCount">
    </div>

    <div class="form-group">
      <label class="questions" for="clientsMode">Are they in person, online, or both?</label>
      <input type="text" id="clientsMode" name="clientsMode">
    </div>

    <div class="form-group">
      <h4 class="questions">Are you currently or have you been affiliated with another supplement brand?</h4>
      <div class="radio-group">
        <div class="radio-item">
          <input type="radio" id="affiliatedYes" name="affiliated" value="Yes" required>
          <label for="affiliatedYes">Yes</label>
        </div>
        <div class="radio-item">
          <input type="radio" id="affiliatedNo" name="affiliated" value="No">
          <label for="affiliatedNo">No</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label class="questions" for="affiliatedBrand">If yes, which?</label>
      <input type="text" id="affiliatedBrand" name="affiliatedBrand">
    </div>

    <div class="form-group agreements-wrapper">
      <h3 class="heading-h3">Agreements</h3>
      <div class="radio-group">
        <div class="radio-item">
          <input type="checkbox" id="socialPolicy" name="socialPolicy[]" required value="Yes">
          <label for="socialPolicy">I agree to the <a href="{{ social_policy }}" target="_blank">Social Media Policy</a></label>
        </div>
        <div class="radio-item">
          <input type="checkbox" id="privacyPolicy" name="privacyPolicy[]" required value="Yes">
          <label for="privacyPolicy">I agree to the <a href="{{ privacy_policy }}" target="_blank"> Privacy Policy</a></label>
        </div>
      </div>
    </div>

    <button type="submit" class="submit-btn">
      <span class="btn-text">Submit</span>
      <span class="btn-loader"></span>
    </button>
  </form>
</div>

<script>
  const socialIcons = document.querySelectorAll('.social-icon');

  socialIcons.forEach((icon) => {
    icon.addEventListener('click', function (e) {
      e.preventDefault();

      const platform = this.getAttribute('data-platform');
      const existingInput = document.querySelector(`#socialInputs .form-group[data-platform="${platform}"]`);

      if (existingInput) {
        existingInput.remove();
        this.classList.remove('added');
      } else {
        addSocialInput(platform);
        this.classList.add('added');
      }
    });
  });

  function addSocialInput(platform) {
    const socialInputs = document.getElementById('socialInputs');

    if (document.getElementById(platform)) {
      return;
    }

    const inputGroup = document.createElement('div');
    inputGroup.className = 'form-group';
    inputGroup.setAttribute('data-platform', platform);

    const platformNames = {
      tiktok: 'TikTok',
      youtube: 'Youtube',
      facebook: 'Facebook',
      twitter: 'X',
    };

    const placeholders = {
      tiktok: 'TikTok',
      youtube: 'Youtube',
      facebook: 'Facebook',
      twitter: 'X',
    };

    inputGroup.innerHTML = `
        <label for="${platform}" class="input-label">${platformNames[platform]}</label>
        <input type="text" id="${platform}" name="${platform}">
        <button type="button" class="remove-social-input" data-platform="${platform}" aria-label="Remove ${platform}">
          <img src="https://cdn.shopify.com/s/files/1/0060/3376/8530/files/gridicons_cross.png?v=1753374388" alt="Remove ${platform}" class="remove-icon">
        </button>
    `;

    socialInputs.appendChild(inputGroup);
    inputGroup.querySelector('.remove-social-input').addEventListener('click', function () {
    inputGroup.remove();

    const icon = document.querySelector(`.social-icon[data-platform="${platform}"]`);
      if (icon) {
        icon.classList.remove('added');
      }
    });

  }

  function validateRequiredFields(form) {
    let valid = true;

    const requiredElements = form.querySelectorAll('[required]');
    const radioGroupsChecked = new Set();

    requiredElements.forEach((el) => {
      const type = el.type;

      if (type === 'radio') {
        if (!radioGroupsChecked.has(el.name)) {
          radioGroupsChecked.add(el.name);
          const group = form.querySelectorAll(`input[name="${el.name}"]`);
          const isChecked = Array.from(group).some(r => r.checked);

          if (!isChecked) {
            valid = false;
          }
        }
      } else if (type === 'checkbox') {
        if (!el.checked) {
          valid = false;
        }
      } else {
        if (!el.value.trim()) {
          valid = false;
        }
      }
    });

    return valid;
  }


  document.getElementById('registrationForm').addEventListener('submit', function (e) {
    e.preventDefault();
    const form = e.target;

    const submitButton = this.querySelector(".submit-btn");
    hideMessage();

    const allValid = validateRequiredFields(form);

    if( !validateEmail() || !validateEmailConfirmation()) {
      showMessage('Email and confirm email must match and be valid.', 'error');
      return;
    }

    if (!allValid) {
      showMessage('Please fill out all required fields.', 'error');
      return;
    }

    submitButton.classList.add('loading');
    const formData = new FormData(form);

    {% comment %} Sending default to PowerfulForm API {% endcomment %}
    formData.append('locale', 'en');
    formData.append('time_zone', 'America/New_York');
    formData.append('page[href]', '{{ page.url }}');
    formData.append('customer[id]', '{{ customer.id }}');
    formData.append('customer[email]', '{{ customer.email }}');
    formData.append('customer[name]', '{{ customer.name }}');
    formData.append('_keyLabel', '{"firstName":"First Name","lastName":"Last Name","email":"Email","address":"Address","state":"State","city":"City","zipCode":"Zip Code","phoneNumber":"Phone Number","instagram":"Instagram","tiktok":"Tiktok","youtube":"Youtube","facebook":"Facebook","twitter":"Twitter","age":"Are you older than 18?","supplements":"Have you used Condemned Labz supplements?","mostLiked":"Which products do you like the most?","interest":"What most interests you?","trainerOrCoach":"Are you a trainer or online coach?","clientsCount":"If yes, how many clients?","clientsMode":"Are they in person, online, or both?","affiliated":"Are you currently or have you been affiliated with another supplement brand?","affiliatedBrand":"If yes, which?","socialPolicy":"I agree to the Social Media Policy","privacyPolicy":"I agree to the Privacy Policy"}');

    fetch("https://app.powerfulform.com//api/front/form/100894/send", {
      method: "POST",
      body: formData
    })
    .then(response => {
        return response.json();
      })
    .then(data => {
      showMessage('Registration successful! Welcome to the club!', 'success');
      submitButton.classList.remove('loading');
      this.reset();
    })
    .catch(error => {
      console.error("Error:", error);
    });
  });

  function validateEmail() {
    const email = document.getElementById('email').value.trim();
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (email && !emailRegex.test(email)) {
      return false;
    }

    return true;
  }

  function validateEmailConfirmation() {
    const email = document.getElementById('email').value.trim();
    const confirmEmail = document.getElementById('confirmEmail').value.trim();

    if (email && confirmEmail && email !== confirmEmail) {
      return false;
    }

    return true;
  }

  function showMessage(message, type) {
    const messageElement = document.getElementById('message');
    messageElement.textContent = message;
    messageElement.className = `message ${type === 'success' ? 'success-message' : 'error-summary'}`;
    messageElement.style.display = 'block';

    messageElement.scrollIntoView({ behavior: 'smooth' });
  }

  function hideMessage() {
    document.getElementById('message').style.display = 'none';
  }
</script>