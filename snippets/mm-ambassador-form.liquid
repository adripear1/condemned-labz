{% comment %} MM - This form is created manually but it's getting submit in "Powerful Form Builder" {% endcomment %}

{{ 'mm-ambassador-signup-form.css' | asset_url | stylesheet_tag }}

<div class="mm-form-container">
  {% if form_title != blank %}
    <h2 class="form-heading">{{ form_title }}</h2>
  {% endif %}
  {% if form_subtitle != blank %}
    <p class="form-subtitle">{{ form_subtitle }}</p>
  {% endif %}

  <div id="message" class="message"></div>

  <form id="registrationForm" novalidate action="https://app.powerfulform.com//api/front/form/100894/send" method="POST" enctype="multipart/form-data" data-id="100894">
    <div class="form-group fg">
      <label for="firstName" class="input-label">First Name</label>
